@{
    ViewData["Title"] = "Home Page";
}

@model Survey
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Document</title>
</head>
<body>
    <div class="form-container">
        <form asp-action="SubmitSurvey" asp-controller="Home" method="post">
            <span asp-validation-for="Name"></span>
            <label asp-for="Name"></label>
            <input asp-for="Name"> 
            <span asp-validation-for="Location"></span>
            <label asp-for="Location"></label>
            <select name="Location" id="Location" >
                <option value="Seattle">Seattle</option>
                <option value="San Jose">San Jose</option>
                <option value="DC">DC</option>
                <option value="California">California</option>
            </select>
            <span asp-validation-for="Location"></span>
            <label asp-for="Language"></label>
            <select name="Language" id="Language" >
                <option value="C#">C#</option>
                <option value="Python">Python</option>
                <option value="JavaScript">JavaScript</option>
                <option value="Java">Java</option>
            </select>
            <span asp-validation-for="Comment"></span>
            <label asp-for="Comment"></label>
            <textarea name="Comment" placeholder="Write something.." style="height:200px"></textarea>
            <input value="Submit" type="submit">
        </form>
    </div>
</body>
</html>
